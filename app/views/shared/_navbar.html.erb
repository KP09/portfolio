<div class="navbar-custom">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "portfolio_logo.png" %>
  <% end %>

  <!-- Search form -->
  <div class="navbar-search hidden-xs">
    <%= form_tag projects_path, method: :get do %>
      <%= text_field_tag :term, nil, class:"navbar-search-input", placeholder: "Search for interests" %>
      <button type="submit" class="navbar-search-btn">
        <i class="fa fa-search"></i>
      </button>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->
      <% link_to "#", class: "navbar-item navbar-link" do %>
        <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-blue">3</div>
        </div>
      <% end %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-item">
        <div class="dropdown">

          <span class="navbar-username">Hi <%= current_user.first_name %></span>

          <%= cl_image_tag current_user.get_picture, crop: :fill, height: 30 , width: 30, class: "avatar-xs dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

            <li>
              <%= link_to user_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_path(current_user) do %>
                <i class="fa fa-cog"></i>  <%= t(".profile", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to new_project_path(current_user) do %>
                <i class="fa fa-plus"></i>  <%= t(".profile", default: "Post a project") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-item navbar-link" %>
      <%= link_to t(".sign_in", default: "Sign up"), new_user_registration_path, class: "navbar-item navbar-link" %>

    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
